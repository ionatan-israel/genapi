#!/usr/bin/env node

const _exit = process.exit
const bluebird = require('bluebird')
const copydir = require('copy-dir')
const copyfy = bluebird.promisify(copydir)
const path = require('path')
const pkg = require('../package.json')
const program = require('commander')

program
  .version(pkg.version)
  .usage('[options] [dir]')
  .parse(process.argv)

const apiName = program.args[0]
const destinationPath = program.args.shift() || './' + apiName

const main = () => {
  if (apiName === undefined) {
    console.log('Se require un nombre para el API')
    exit(1)
  } else {
    copyfy(path.join(__dirname, '..', 'boilerplate'), destinationPath)
    .then(console.log(' Create Dirs : ok!'))
    .catch((err) => console.log(err))
  }
}

main()

function exit (code) {
  // flush output for Node.js Windows pipe bug
  // https://github.com/joyent/node/issues/6247 is just one bug example
  // https://github.com/visionmedia/mocha/issues/333 has a good discussion
  function done () {
    if (!(draining--)) _exit(code)
  }
  const streams = [process.stdout, process.stderr]
  let draining = 0
  exit.exited = true
  streams.forEach(function (stream) {
    // submit empty write request and wait for completion
    draining += 1
    stream.write('', done)
  })
  done()
}

